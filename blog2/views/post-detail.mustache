<html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  <title>Blog App - Post Detail</title>
</head>

<body>
  <h1>Post Detail</h1>

  <div class='container'>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/posts/all">Blog App</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/posts/all">View Posts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/manage">Manage Posts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout {{username}}</a>
        </li>
      </ul>
    </div>
  </nav>

  <ul class="list-group">
      <li class="list-group-item">
        <div>
          <div>User: {{post.user.username}}</div>
          <div>Category: {{post.category}}</div>
          <div>Title: {{post.title}}</div>
          <div>{{post.body}}</div>
        </div>
      </li>
  </ul>

  <ul class="list-group">
    {{#post.comments}}
      <form action="/del-comment" method='POST'>
      <li class="list-group-item">
        <div>
          <div>Title: {{dataValues.title}}</div>
          <div>{{dataValues.body}}</div>
          <input type="hidden" name="post_id" value={{dataValues.post_id}}>
          <input type="hidden" name="comment_id" value={{dataValues.id}}>
          <button type="submit" class="btn btn-primary btn-sm" {{dataValues.buttonState}}>Remove</button>
        </div>
      </li>
      </form>
    {{/post.comments}}
    {{^post.comments}}
      <li class="list-group-item">
        <div>No comments found.</div>
      </li>
    {{/post.comments}}
  </ul>

  <form action="/add-comment" method="POST">
    <div class="form-group">
      <label for="blogTitle">Title</label>
      <input type="text" name="title" class="form-control" placeholder="Title">
    </div>
    <div class="form-group">
      <label for="blogBody">Body</label>
      <input type="text" name="body" class="form-control" placeholder="Body">
    </div>
    <input type="hidden" name="post_id" value={{post.id}}>
    <button type="submit" class="btn btn-primary">New Comment</button>
  </form>

  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>