<html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  <title>Blog App - Manage</title>
</head>

<body>
  <h1>{{username}}'s Posts</h1>

  <div class='container'>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/posts/all">Blog App</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/posts/all">View Posts</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/manage">Manage Posts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout {{username}}</a>
        </li>
      </ul>
    </div>
  </nav>

  <form action="/manage" method="POST">
    <div class="form-group">
      <label for="blogCategory">Category</label>
      <input type="text" name="category" class="form-control" placeholder="Category">
    </div>
    <div class="form-group">
      <label for="blogTitle">Title</label>
      <input type="text" name="title" class="form-control" placeholder="Title">
    </div>
    <div class="form-group">
      <label for="blogBody">Body</label>
      <input type="text" name="body" class="form-control" placeholder="Body">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <ul class="list-group">
    {{#posts}}
      <li class="list-group-item">
        <div>
          <div>Post ID: {{dataValues.id}}</div>
          <div>Published: {{dataValues.isPublished}}</div>
          <div>Category: {{dataValues.category}}</div>
          <div>Title: {{dataValues.title}}</div>
          <div>{{dataValues.body}}</div>
        </div>
        <form method="POST" action="/publish">
          <input type="hidden" value={{dataValues.id}} name="pub_post_id">
          <button type="submit" class="btn btn-primary btn-sm">Publish</button>
        </form>
        <form method="POST" action="/delete">
          <input type="hidden" value={{dataValues.id}}  name="del_post_id">
          <button type="submit" class="btn btn-primary btn-sm">Remove</button>
        </form>
      </li>
    {{/posts}}
    {{^posts}}
      <li class="list-group-item">
        <div>No posts found.</div>
      </li>
    {{/posts}}
  </ul>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>




  